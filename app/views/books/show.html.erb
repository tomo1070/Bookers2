<div class="col-md-4">
  <%= render 'left', user: @user %>
</div>

<div class="col-md-8">
  <h2>Book detail</h2>
  <div class="container">
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <td><%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100, 100) %>
          <p><%= @user.name %></p>
          <% end %></td>
          <td><%= link_to @books.title, book_path(@user.id) %></td>
          <td><%= @books.body %></td>
            <% if @books.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@books), class: "btn btn-success", style: "color: white;" %></td>
              <td><%= link_to "Destroy", book_path(@books), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white;" %></td>
            <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>