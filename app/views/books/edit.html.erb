<div class="container">
  <h2 class="text-center mb-4">Editing Book</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with model: @book do |f| %>
        <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"Title" %><br>
        <label for="inputbody">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"Opinion" %><br>
          <%= f.submit "Update Book" %>
        <p><%= link_to 'Show', book_path(@book.id) %></p>
        <p><%= link_to 'Back', books_path %></p>
      <% end %>
    </div>
  </div>