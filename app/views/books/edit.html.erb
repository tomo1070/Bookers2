<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:""%>
  <label for="inputbody">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"Opinion" %>
  <%= f.submit "Update Book" %>
  <p><%= link_to 'Show', book_path(@book.id) %></p>
  <p><%= link_to 'Back', books_path %></p>
<% end %>